@model DasBlog.Web.Models.BlogViewModels.PostViewModel

@{
    ViewBag.Title = "Create";
    Layout = "../../Themes/dasblog/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />

<!-- Success Alert -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="successAlert">
        <i class="fa-solid fa-circle-check me-2"></i>
        <strong>Success!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form asp-controller="post" asp-action="create" method="post" enctype="multipart/form-data" id="CreatePostForm">

    <partial name="BlogPostFields" model="Model" />

    <hr />
    <div class="d-flex flex-wrap">
        <button type="button" class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#confirmCreateModal">Create Post</button>
        <input class="btn btn-secondary me-2" asp-controller="Home" asp-action="Index" type="submit" name="submit" value="Cancel" />
    </div>

    <!-- Hidden submit button for actual form submission -->
    <input type="submit" name="submit" value="Create Post" id="hiddenCreateButton" style="display:none;" />

    @Html.HiddenFor(m => m.EntryId)
    @Html.HiddenFor(m => m.Author)
    @Html.HiddenFor(m => m.CreatedDateTime)

</form>

<!-- Create Confirmation Modal -->
<div class="modal fade" id="confirmCreateModal" tabindex="-1" aria-labelledby="confirmCreateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmCreateModalLabel">Confirm Create Post</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to create this blog post?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmCreateButton">Create Post</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <rich-edit-scripts control-id="mytextarea" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const confirmCreateButton = document.getElementById('confirmCreateButton');
            const hiddenCreateButton = document.getElementById('hiddenCreateButton');
            const confirmCreateModal = document.getElementById('confirmCreateModal');

            confirmCreateButton.addEventListener('click', function() {
                // Close the modal
                const modalInstance = bootstrap.Modal.getInstance(confirmCreateModal);
                if (modalInstance) {
                    modalInstance.hide();
                }

                // Click the hidden submit button to trigger normal form submission
                setTimeout(function() {
                    hiddenCreateButton.click();
                }, 300);
            });

            // Auto-dismiss success alert after 5 seconds
            const successAlert = document.getElementById('successAlert');
            if (successAlert) {
                // Scroll to top to show the alert
                window.scrollTo({ top: 0, behavior: 'smooth' });

                setTimeout(function() {
                    const alert = bootstrap.Alert.getOrCreateInstance(successAlert);
                    alert.close();
                }, 5000);
            }
        });
    </script>
}